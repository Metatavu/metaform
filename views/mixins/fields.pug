mixin boolean-field(field)
  .form-group
    .col-12
      .form-check
        label.form-check-label
          input.form-check-input(type="checkbox",name=field.name,title=field.title)
          |&nbsp;
          =field.title
      if field.help
        small.form-text.text-muted
          =field.help
          
