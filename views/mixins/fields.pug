mixin unknown-field(field)
  .col-12.error
    =field.type
    |&nbsp;is unknown

mixin field(field)
  case field.type 
    when 'text'
      +text-field(field)
    when 'email'
      +email-field(field)
    when 'number'
      +number-field(field)
    when 'memo'
      +memo-field(field)
    when 'boolean'
      +boolean-field(field)
    when 'files'
      +files-field(field)
    default
      +unknown-field(field)
      
  