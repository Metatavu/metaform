extends layout/admin-layout

block custom-head
  title
    |Salasanan vaihto
  link(rel='stylesheet', href='/css/setpassword.min.css')

block body
  .container
    if message && message.length
      .alert.alert-danger
        =message
    form(role='form', action='/changepass', method='post')
      .row.mt-4
        .col-12
          h2
            |Salasanan vaihto
      .form-group.row
        .col-12
          label(for='old_pass')
            |Vanha Salasana
        .col-12
          input.form-control(id='old_pass',name='old_pass',type='password',required=true)
      .form-group.row
        .col-12
          label(for='pass')
            |Uusi salasana
        .col-12
          input.form-control(id='pass',name='pass',type='password',required=true)
      .form-group.row
        .col-12
          label(for='pass2')
            |Salasana uudestaan
        .col-12
          input.form-control(id='pass2',name='pass2',type='password',required=true)
      .form-group.row
        .col-12
          input.btn.btn-lg.btn-warning(type="submit",value='Vaihda salasana')